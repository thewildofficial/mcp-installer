{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "pretty": true,
    "target": "ES2022",
    "outDir": "dist",
    "lib": ["dom", "es2015"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*.mts"],
  "exclude": ["node_modules"]
}
